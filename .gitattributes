# Set default behavior to automatically normalize line endings
* text=auto

# Ren'Py script files
*.rpy text eol=lf
*.rpym text eol=lf

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf

# Configuration and data files
*.txt text eol=lf
*.md text eol=lf
*.rst text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Binary files - don't try to merge or diff these
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.tiff binary
*.ico binary
*.webp binary

# Audio files
*.ogg binary
*.mp3 binary
*.wav binary
*.m4a binary
*.flac binary
*.aac binary

# Video files
*.mp4 binary
*.avi binary
*.mov binary
*.wmv binary
*.flv binary
*.webm binary
*.ogv binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Archive files
*.zip binary
*.7z binary
*.rar binary
*.tar binary
*.gz binary
*.bz2 binary

# Application files
*.exe binary
*.app binary
*.dmg binary
*.pkg binary
*.apk binary
*.aab binary

# Ren'Py compiled files
*.rpyc binary
*.rpymc binary
*.rpyb binary

# Treat certain files as Ren'Py language for GitHub language detection
*.rpy linguist-language=Ren'Py
*.rpym linguist-language=Ren'Py

# Don't include certain directories in language statistics
saves/ linguist-vendored
cache/ linguist-vendored
tmp/ linguist-vendored
build/ linguist-vendored
dist/ linguist-vendored

